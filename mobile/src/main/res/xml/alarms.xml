<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/alarm_cat_all"
        app:iconSpaceReserved="false">
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="alarm_notifications_enabled"
            android:title="@string/alarm_notifications_enabled"
            android:summary="@string/alarm_notifications_enabled_summary"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/alarm_cat_very_low"
        app:iconSpaceReserved="false"
        app:initialExpandedChildrenCount="2">
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="alarm_very_low_enabled"
            android:title="@string/alarm_enabled"
            android:summary="@string/alarm_enabled_summary"
            app:iconSpaceReserved="false" />
        <androidx.preference.SeekBarPreference
            android:defaultValue="15"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1"
            app:min="5"
            android:max="120"
            android:key="alarm_very_low_interval"
            android:title="@string/alarm_interval"
            android:summary="@string/alarm_interval_summary"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="alarm_very_low_settings"
            android:title="@string/alarm_settings"
            android:summary="@string/alarm_settings_summary"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="alarm_very_low_test"
            android:title="@string/alarm_test"
            android:summary="@string/alarm_test_summary"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="alarm_very_low_save_sound"
            android:title="@string/alarm_save_sound"
            android:summary="@string/alarm_save_sound_summary"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>